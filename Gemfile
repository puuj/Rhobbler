  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
end

gem 'jquery-rails'
gem 'unicorn'
gem 'rockstar'
gem 'state_machine'
gem 'factory_girl'
gem 'resque'
